<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_peak" tools:context="com.purupahuja.year7fieldtrip.Peak"
    android:background="#c5f697">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Peak"
            android:id="@+id/textView8"
            android:textSize="70sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView10" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TRAFFIC COUNT"
            android:id="@+id/button"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pTraffic" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PEDESTRIAN COUNT"
            android:id="@+id/button2"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pPed" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ENVIRONMENTAL QUALITY ANALYSIS"
            android:id="@+id/button3"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pEqs" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NOISE POLLUTION"
            android:id="@+id/button4"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pNoise" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="LAND USE TALLY"
            android:id="@+id/button5"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pLand" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PEDESTRIAN SURVEY"
            android:id="@+id/button6"
            android:textSize="18sp"
            android:background="#5a0a6e"
            android:textColor="#ffffff"
            android:onClick="pSurvey" />

    </LinearLayout>
</RelativeLayout>
